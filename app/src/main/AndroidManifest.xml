<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/questionimg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/questionimg"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewQuiz"
        tools:targetApi="31">
        <activity
            android:name=".authorization.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.NewQuiz.NoActionBar"/>
        <activity
            android:name=".authorization.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NewQuiz.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NewQuiz.NoActionBar" />
        <activity
            android:name=".authorization.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NewQuiz.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>